<header>
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				{{ page.header }}
			</div>
			<div class="col-md-10">
				<div class="region-container">
					{{ page.primary_menu }}
					{{ page.secondary_menu }}
				</div>
			</div>
		</div>
	</div>
</header>
  
<div class="container main-content">

	<div class="top-section">
	  {{ page.breadcrumb }}
	  {{ page.highlighted }}
	  {{ page.help }}
	</div>
	
	<div class="row">	
		{% if page.sidebar_first %}
		  <div class="col-md-3 sidenav">
			{{ page.sidebar_first }}
		  </div>
		{% endif %}

		{% if page.sidebar_first or page.sidebar_second%}
		<div class="col-md-9"> 
		  {{ page.content }}
		</div>
		{% else %}
		<div class="col-md-12"> 
		  {{ page.content }}
		</div>
		{% endif %}

		{% if page.sidebar_second %}
		  <div class="col-md-3 sidenav">
			{{ page.sidebar_second }}
		  </div>
		{% endif %}
	</div>
</div>

{% if page.footer %}
	<footer>
		<div class="container">
		{{ page.footer }}
		</div>
	</footer>
{% endif %}